<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Pekerjaan"
            android:padding="10dp"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/judul_pekerjaan"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13 November, 2023"
            android:padding="10dp"
            android:maxLines="2"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/tanggal_pekerjaan"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:padding="10dp"
            android:maxLines="3"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/deskripsi_pekerjaan"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:maxLines="4"
            android:id="@+id/skill_pekerjaan"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gaji"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:maxLines="5"
            android:id="@+id/gaji_pekerjaan"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>